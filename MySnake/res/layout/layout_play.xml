<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageApple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playapplescore" />

         <TextView
            android:id="@+id/textApple"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playgamescore" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageBg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageM10"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageM01"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numcol" />

        <ImageView
            android:id="@+id/imageS10"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageS01"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numcol" />

        <ImageView
            android:id="@+id/imageMs10"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imageMs01"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/numempty" />

        <ImageView
            android:id="@+id/imagePause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playpause" />

        <ImageView
            android:id="@+id/imageBg2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/boxbg" />
    </LinearLayout>

    <com.iot.mysnake.ViewBox
        android:id="@+id/viewBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>